<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PinCodeButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/digit_button_size</item>
        <item name="android:layout_height">@dimen/digit_button_size</item>
        <item name="android:background">@drawable/background_digit_button</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <!--  <item name="android:fontFamily">@font/open_sans_semibold</item>-->
        <item name="android:layout_margin">@dimen/digit_button_margin</item>
        <item name="android:textSize">@dimen/digit_button_text_size</item>
        <item name="android:textColor">@color/colorDigitText</item>
    </style>

</resources>
